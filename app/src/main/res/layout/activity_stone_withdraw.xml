<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shssjk.activity.person.StoneWithdrawActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bankcard_issuer_txtv"
            android:padding="@dimen/margin_space"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/bank"
            android:layout_alignParentLeft="true"
            style="@style/textStyle.Normal.black"/>
        <EditText
            android:id="@+id/bankcard_issuer_edtv"
            android:layout_toRightOf="@id/bankcard_issuer_txtv"
            style="@style/textStyle.Medium.User.Input"
            android:paddingRight="@dimen/tag_common_margin"
            android:background="@drawable/edittext_default_rounded"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical|right"
            />
        <Spinner
            android:id="@+id/ban_sp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:entries="@array/type_bank"
            style="@android:style/Widget.Holo.Light.Spinner"
            />
    </RelativeLayout>
    <View  style="@style/separator_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bank_num_txtv"
            android:padding="@dimen/margin_space"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/cash"
            android:layout_alignParentLeft="true"
            style="@style/textStyle.Normal.black"/>
        <EditText
            android:id="@+id/bank_num_edtv"
            android:layout_toRightOf="@id/bank_num_txtv"
            style="@style/textStyle.Medium.User.Input"
            android:background="@drawable/edittext_default_rounded"
            android:paddingRight="@dimen/tag_common_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_space"
            android:maxLength="10"
            android:gravity="center_vertical|right"
            android:inputType="numberDecimal" />
    </RelativeLayout>
    <View  style="@style/separator_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/code_txtv"
            android:padding="@dimen/margin_space"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/code"
            android:layout_alignParentLeft="true"
            style="@style/textStyle.Normal.black"/>
        <EditText
            android:id="@+id/code_num_edtv"
            android:layout_toRightOf="@id/code_txtv"
            style="@style/textStyle.Medium.User.Input"
            android:background="@drawable/edittext_default_rounded"
            android:paddingRight="@dimen/tag_common_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/margin100dp"
            android:inputType="numberDecimal" />
        <Button
            android:layout_centerVertical="true"
            android:layout_width="@dimen/margin100dp"
            android:layout_height="40dp"
            android:text="@string/register_btn_re_code_done"
            android:id="@+id/btn_send_sms"
            android:layout_alignBottom="@+id/edit_code"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:enabled="true"
          />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        style="@style/button_style"
        android:text="@string/apply"
        android:id="@+id/btn_withdraw"
        android:layout_below="@+id/code_txtv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
      />

</LinearLayout>
