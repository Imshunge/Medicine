<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="125.0dip"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/bg_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/bg_view">
        <ImageView
            android:layout_margin="@dimen/margin5dp"
            android:id="@+id/bank_icon_imv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_space"
            android:textStyle="bold"
            android:src="@drawable/icon"
            style="@style/textStyle.Medium.black"/>
        <TextView
            android:id="@+id/bank_name_txtv"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:paddingLeft="@dimen/margin_space"
            android:layout_margin="@dimen/margin5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/bank_icon_imv"
            android:text="招商银行"
            android:textStyle="bold"
            style="@style/textStyle.Medium.black"/>
        <TextView
            android:id="@+id/bank_num_txtv"
            android:layout_width="match_parent"
            android:layout_below="@id/bank_icon_imv"
            android:layout_height="40dip"
            android:lines="2"
            android:layout_marginLeft="@dimen/margin_space"
            android:paddingRight="@dimen/margin_space"
            android:gravity="left|center_vertical"
            android:text="4107855555"
            android:textStyle="bold"
            style="@style/textStyle.Hug.black"/>
    </RelativeLayout>
    <View style="@style/separator_line"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space_half"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bg_view"
        android:layout_height="40dip"
        android:descendantFocusability="blocksDescendants"
        >
        <Button
            android:id="@+id/address_setdefault_btn"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:background="@drawable/icon_checkno"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            />
        <TextView
            android:id="@+id/bank_default_txtv"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/address_setdefault_btn"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/margin_space_half"
            android:text="设为默认"
            style="@style/textStyle.Normal.black"/>
        <TextView
            android:id="@+id/bank_delete_txtv"
            android:layout_width="25dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/margin_space"
            android:text="删除"
            style="@style/textStyle.Normal.black"/>
        <Button
            android:id="@+id/bank_delete_btn"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_toLeftOf="@id/bank_delete_txtv"
            android:background="@drawable/icon_delete"/>
        <TextView
            android:id="@+id/bank_edit_txtv"
            android:layout_width="25dip"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/bank_delete_btn"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/margin_space"
            android:text="编辑"
            style="@style/textStyle.Normal.black"/>
        <Button
            android:id="@+id/bank_edit_btn"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:layout_toLeftOf="@id/bank_edit_txtv"
            android:background="@drawable/icon_edit"/>
    </RelativeLayout>

</LinearLayout>