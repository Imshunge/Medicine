<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_relative2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#fafafa" >

    <RelativeLayout
        android:id="@+id/jc_relat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/img_essayuser"
            android:layout_width="@dimen/item_usericon_width"
            android:layout_height="@dimen/item_usericon_height"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_header" />
        <TextView
            android:id="@+id/jc_nickname"
            style="@style/text_15"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_essayuser"
            android:clickable="false"
            android:text="秋天来了"
            android:textColor="#000000" />
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/item_sicon_width"
            android:layout_height="@dimen/item_sicon_height"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_delete" />
        <ImageView
            android:id="@+id/jc_grade"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/jc_nickname"
            android:layout_alignBottom="@+id/jc_nickname"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/jc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jc_nickname"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/jc_sin"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:textColor="#363636"
            android:text="20160518"
            android:visibility="invisible"
            android:textSize="12sp" />

        <TextView
            android:text="秋天来了冬天还远吗"
            android:id="@+id/jc_sin"
            style="@style/date_text"
            android:layout_below="@+id/jc_nickname"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_essayuser"
            android:visibility="invisible"
            android:clickable="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/jc_content"
        style="@style/text_15"
        android:layout_below="@+id/jc_relat"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="11111" />

    <ImageView
        android:id="@+id/jc_image"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/jc_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:src="@drawable/bg_image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/jc_image"
        android:visibility="gone"
        android:gravity="top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_view" />

            <TextView
                android:id="@+id/jc_view"
                style="@style/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11111" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_pinglun" />

            <TextView
                android:id="@+id/jc_pinglun"
                style="@style/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1111111" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="8dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_order" />

            <TextView
                android:id="@+id/jc_collect"
                style="@style/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="33" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>