<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temperatureBackground"
    android:orientation="vertical"
    tools:context=".shop.StonePayActivity"

    >
    <TextView
        style="@style/textStyle.Hug.black"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_space"
        android:layout_marginTop="@dimen/margin_space"
        android:layout_marginBottom="@dimen/margin10dp"
        android:gravity="left"
        android:text="订单信息" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view">
        <TextView
            android:id="@+id/order_ordersn_txtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|left"
            android:text="账户石头数量"
            style="@style/textStyle.Normal.black"/>

        <TextView
            android:id="@+id/stone_sum_txtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|right"
            android:text=""
            style="@style/textStyle.Normal.lightRed"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|left"
            android:text="订单号"
            style="@style/textStyle.Normal.black"/>
        <TextView
            android:id="@+id/orderid_txtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|right"
            android:text=""
            style="@style/textStyle.Normal.lightRed"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|left"
            android:text="订单金额"
            style="@style/textStyle.Normal.black"/>

        <TextView
            android:id="@+id/order_sum_txtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|right"
            android:text=""
            style="@style/textStyle.Normal.lightRed"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_row"
        android:background="@color/bg_view">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|left"
            android:text="所需石头数量"
            style="@style/textStyle.Normal.black"/>
        <TextView
            android:id="@+id/order_numstone_txtv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_space"
            android:gravity="center_horizontal|center_vertical|right"
            android:text=""
            style="@style/textStyle.Normal.lightRed"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <Button
        android:layout_width="match_parent"
        style="@style/button_style"
        android:text="@string/activity_title_pay_stone"
        android:id="@+id/btn_withdraw"
        android:layout_below="@+id/code_txtv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/margin20dp"
        android:layout_marginRight="@dimen/margin20dp"
        />
</LinearLayout>
