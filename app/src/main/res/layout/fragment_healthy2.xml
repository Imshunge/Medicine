<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/shop_title">

        <Button
            android:id="@+id/titlebar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/margin_space"
            android:background="@drawable/title_back_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:text="设备"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bottom_tools4"
            style="@style/textStyle.Big.black"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tab_item_healthy"
            android:textColor="@color/white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/health_banner_imgv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin100dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin55dp">
        <ImageView
            android:id="@+id/blood_imgv"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin20dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/blood" />

        <TextView
            android:id="@+id/tv_blood"
            style="@style/textStyle.Big.black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/rab_xueya2"
            android:textSize="@dimen/textSizeHuge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@drawable/line_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin55dp">

        <ImageView
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin20dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/sugar" />

        <TextView
            android:id="@+id/tv_sugar"
            style="@style/textStyle.Big.black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/rab_xuetang2"
            android:textSize="@dimen/textSizeHuge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@drawable/line_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin55dp">

        <ImageView
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin20dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/footstep" />

        <TextView
            android:id="@+id/tv_stepcounter"
            style="@style/textStyle.Big.black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/rab_stepcount"
            android:textSize="@dimen/textSizeHuge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@drawable/line_01" />
</LinearLayout>