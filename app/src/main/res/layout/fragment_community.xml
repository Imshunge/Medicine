<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shssjk.MainActivity" >

    <include
        android:id="@+id/comment_titlebar"
        layout="@layout/titlebar" />

    <com.viewpagerindicator.TabPageIndicator
        android:layout_below="@id/comment_titlebar"
        android:id="@+id/coupon_page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/coupon_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/coupon_page_indicator"
        />

</RelativeLayout>