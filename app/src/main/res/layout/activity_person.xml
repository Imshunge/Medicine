<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view"
    android:orientation="vertical"
    tools:context="com.shssjk.activity.health.PersonActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/head_mimgv"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margin50dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginTop="@dimen/margin10dp"
            android:layout_marginBottom="@dimen/margin10dp"
            android:src="@drawable/person_default_head" />
        <TextView
            android:id="@+id/name_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin50dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="昵称" />
    </LinearLayout>
    <View
        android:id="@+id/line1"
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin70dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="@string/user_sex" />
        <TextView
            android:id="@+id/sex_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="" />
    </LinearLayout>
    <View
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin70dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="@string/person_age" />

        <TextView
            android:id="@+id/age_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="0" />
    </LinearLayout>

    <View
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin70dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="@string/person_height" />
        <TextView
            android:id="@+id/hight_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp" />

    </LinearLayout>

    <View
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin70dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="体重" />
        <TextView
            android:id="@+id/weight_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp" />

    </LinearLayout>

    <View
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin70dp"
            android:layout_height="@dimen/margi30dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:text="目标步数" />
        <TextView
            android:id="@+id/goal_txtv"
            style="@style/textStyle.Medium.User"
            android:layout_width="@dimen/margin50dp"
            android:layout_height="@dimen/margi30dp"

            android:layout_marginLeft="@dimen/margin20dp" />

    </LinearLayout>

    <View
        style="@style/separator_line"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />
</LinearLayout>
