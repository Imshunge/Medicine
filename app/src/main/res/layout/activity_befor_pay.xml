<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shssjk.activity.common.shop.BeforPayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_frist"
        >
        <ImageView
            android:layout_width="@dimen/item_usericon_pinglun_width"
            android:layout_height="@dimen/item_usericon_pinglun_width"
            android:background="@drawable/orderok"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_icon_height"
            android:text="@string/activity_paybefor_success"
            android:gravity="center"
            android:textColor="@color/paybefor_colcor"
            />
    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/ll_frist"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />

    <TextView
        android:paddingTop="@dimen/margin5dp"
        android:id="@+id/tv_hiti"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_title_pay_hini"
        />

    <TextView
        android:id="@+id/tv_orderid"
        android:layout_below="@+id/tv_hiti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_paybefor_success"
        />

    <TextView
        android:id="@+id/tv_paysum"
        android:layout_below="@+id/tv_orderid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_title_pay_befor"
        />

    <Button

        android:layout_width="match_parent"
        style="@style/button_style"
        android:text="@string/activity_title_pay_befor_btn_pay"
        android:id="@+id/btn_gopay"
        android:layout_below="@+id/tv_paysum"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />
</RelativeLayout>
