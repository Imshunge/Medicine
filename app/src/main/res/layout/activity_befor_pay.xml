<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shssjk.activity.common.shop.BeforPayActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_frist"
        >
        <ImageView
            android:layout_width="@dimen/item_usericon_pinglun_width"
            android:layout_height="@dimen/item_usericon_pinglun_width"
            android:background="@drawable/orderok"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_icon_height"
            android:text="@string/activity_paybefor_success"
            android:gravity="center"
            android:textStyle="bold"

            android:textColor="@color/paybefor_colcor"
            />
    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/ll_frist"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <TextView
        android:paddingTop="@dimen/margin5dp"
        android:id="@+id/tv_hiti"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_title_pay_hini"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tv_orderid"
        android:layout_below="@+id/tv_hiti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_paybefor_success"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_paysum"
        android:layout_below="@+id/tv_orderid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_paybefor_btn_sum"
        android:textStyle="bold"
        />
    <TextView
        android:paddingTop="@dimen/margin5dp"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_icon_height"
        android:text="@string/activity_paybefor_choose_pay"
        android:gravity="center_vertical"
        />
    <View
        android:layout_below="@+id/ll_frist"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50dp"
        android:id="@+id/ll_alipay_pay"
        android:layout_below="@+id/btn_gopay"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/item_usericon_pinglun_width"
            android:layout_height="@dimen/item_usericon_pinglun_width"
            android:background="@drawable/alipay"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/item_icon_height"
            android:text="@string/activity_title_pay_alipay"
            android:paddingLeft="@dimen/margin5dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:layout_marginLeft="@dimen/margin5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_arrow_right"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/ll_frist"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50dp"
        android:id="@+id/ll_union_pay"
        android:layout_below="@+id/btn_gopay"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/item_usericon_pinglun_width"
            android:layout_height="@dimen/item_usericon_pinglun_width"
            android:background="@drawable/union"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/item_icon_height"
            android:text="@string/activity_title_pay_union"
            android:paddingLeft="@dimen/margin5dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"

            />
        <ImageView
            android:layout_marginLeft="@dimen/margin5dp"
            android:id="@+id/arrow_imgv"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_arrow_right"/>
    </LinearLayout>
    <View
        android:layout_below="@+id/ll_frist"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/broder"  />
</LinearLayout>
