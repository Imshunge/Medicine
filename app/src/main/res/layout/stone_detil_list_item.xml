<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_view"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_source"
        style="@style/textStyle.Hug.black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/article_marginTop"
        android:layout_marginTop="@dimen/article_marginTop"
        android:singleLine="true"
        android:text="@string/person_mystone_source" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_source"
        android:layout_below="@+id/tv_source"
        android:layout_marginBottom="@dimen/margin5dp"
        android:layout_marginTop="@dimen/article_marginTop"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/person_mystone_date"
        android:textColor="@color/colorNormalText"
        android:textSize="@dimen/article_content_size" />

    <LinearLayout
        android:layout_width="@dimen/margin90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin5dp"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_sign"
            style="@style/textStyle.Hug.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/article_marginLeft2"
            android:layout_marginTop="@dimen/article_marginTop"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="-" />

        <TextView
            android:id="@+id/tv_num"
            style="@style/textStyle.Hug.black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_sign"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="@dimen/article_marginLeft2"
            android:layout_marginTop="@dimen/article_marginTop"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="100" />
    </LinearLayout>

</RelativeLayout>
