<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.person.user.SPLoginActivity">
    <TextView
        android:layout_width="wrap_content"
        style="@style/textStyle.Medium.User"
        android:text="@string/change_password_old"
        android:id="@+id/txt_phone"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_password"
        android:layout_toStartOf="@+id/edit_password" />
    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edit_express_name"
        android:layout_toRightOf="@+id/txt_phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txt_phone"
        style="@style/textStyle.Medium.User.Input"
        android:background="@drawable/edittext_default_rounded"

        />
        <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/txt_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"/>
    <TextView
        android:layout_width="wrap_content"
        style="@style/textStyle.Medium.User"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/change_password_new"
        android:id="@+id/txt_pwd"
        android:layout_below="@+id/txt_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:gravity="center"
        android:layout_toLeftOf="@+id/edit_password2"
        android:layout_toStartOf="@+id/edit_password2" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_password"
        android:layout_toRightOf="@+id/txt_pwd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txt_pwd"
        android:layout_below="@+id/edit_express_name"
        style="@style/textStyle.Medium.User.Input"
        android:background="@drawable/edittext_default_rounded"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/txt_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/textStyle.Medium.User"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/register_confirm_password"
        android:id="@+id/txt_pwd2"
        android:layout_below="@+id/txt_pwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_password2"
        android:layout_toRightOf="@+id/txt_pwd2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/textStyle.Medium.User.Input"
        android:background="@drawable/edittext_default_rounded"
        android:layout_alignBottom="@+id/txt_pwd2"
        android:layout_below="@+id/edit_password" />
    <Button
        android:layout_width="match_parent"
        style="@style/button_style"
        android:text="@string/changepwd_btn"
        android:id="@+id/btn_changepwd"
        android:layout_below="@+id/txt_pwd2"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onChangePwdClick" />



</RelativeLayout>
