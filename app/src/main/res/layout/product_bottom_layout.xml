<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity_ss"
    android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/ll_buy_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <LinearLayout
                android:id="@+id/home_lyaout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/product_home_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_unlike"
                    android:layout_gravity="center_horizontal|center_vertical"
                    />
                <TextView
                    android:id="@+id/product_home_txtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/product_details_home"
                    android:textSize="@dimen/font_size_small"/>
            </LinearLayout>
            <View style="@style/separator_line"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                />
            <RelativeLayout
                android:id="@+id/product_cart_rlayout"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="50dip"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal|center_vertical"
                >

                <ImageView
                    android:id="@+id/product_cart_imgv"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/product_cart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/text_item_shopcatd"
                    android:textSize="@dimen/font_size_small"
                    android:layout_below="@id/product_cart_imgv"/>
                <TextView
                    android:id="@+id/productcart_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="0"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="visible"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal|top"
                    android:textColor="@color/white"
                    android:background="@drawable/product_cart_count_bg"
                    android:layout_toRightOf="@+id/product_cart_imgv"
                    android:layout_below="@id/product_cart_imgv"/>
            </RelativeLayout>
            <View style="@style/separator_line"
                android:layout_height="match_parent"
                android:layout_width="1dp"
                />
            <LinearLayout
                android:id="@+id/like_lyaout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/product_like_imgv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_star"
                    android:layout_gravity="center_horizontal|center_vertical"
                    />
                <TextView
                    android:id="@+id/product_like_txtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/product_details_unlike"
                    android:textSize="@dimen/font_size_small"/>
            </LinearLayout>
            <Button
                android:id="@+id/add_cart_btn"
                android:layout_weight="1.5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/product_add_cart"
                android:textColor="@color/white"
                android:background="@drawable/button_yellow_selector"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:id="@+id/buy_btn"
                android:layout_weight="1.5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/product_buy_now"
                android:textColor="@color/white"
                android:background="@drawable/button_selector"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/buy_points_btn"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:text="@string/product_buy_now"
        android:textColor="@color/white"
        android:background="@drawable/button_selector"
        android:layout_alignParentRight="true"
        />
    </LinearLayout>
