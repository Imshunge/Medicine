<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 重要（圆角） -->

    <item android:state_selected="true"><shape>
            <solid android:color="@color/primary_pressed" />

            <stroke android:width="1px" android:color="@color/primary_border" />

            <corners android:radius="@dimen/button_rounded_corner_radius" />
        </shape></item>
    <item android:state_focused="true"><shape>
        <solid android:color="@color/primary_pressed" />

        <stroke android:width="1px" android:color="@color/primary_border" />

        <corners android:radius="@dimen/button_rounded_corner_radius" />
    </shape></item>
    <item android:state_pressed="true"><shape>
            <solid android:color="@color/primary_pressed" />

            <stroke android:width="1px" android:color="@color/primary_border" />

            <corners android:radius="@dimen/button_rounded_corner_radius" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/primary_disabled" />

            <stroke android:width="1px" android:color="@color/primary_disabled_border" />

            <corners android:radius="@dimen/button_rounded_corner_radius" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/primary" />

            <stroke android:width="1px" android:color="@color/primary_border" />

            <corners android:radius="@dimen/button_rounded_corner_radius" />
        </shape></item>

</selector>